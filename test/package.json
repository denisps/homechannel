{
  "name": "@homechannel/system-tests",
  "version": "0.1.0",
  "description": "System-level integration, E2E, and system tests for HomeChannel",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "node --test **/*.test.js",
    "test:integration": "node --test integration/*.test.js",
    "test:e2e": "node --test e2e/*.test.js",
    "test:system": "node --test system/*.test.js",
    "test:watch": "node --test --watch **/*.test.js",
    "test:coverage": "node --test --experimental-test-coverage **/*.test.js"
  },
  "keywords": [
    "webrtc",
    "testing",
    "integration",
    "e2e",
    "system-test"
  ],
  "author": "",
  "license": "MIT",
  "optionalDependencies": {
    "playwright": "^1.40.0"
  },
  "devDependencies": {}
}
